= form_for @route do |f|
  - if @route.errors.any?
    #error_explanation
      %h2= "#{pluralize(@route.errors.count, "error")} prohibited this route from being saved:"
      %ul
        - @route.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :trip_num
    = f.text_field :trip_num
  .field
    = f.label :advance
    = f.text_field :advance
  .field
    = f.label :reimbursement
    = f.text_field :reimbursement
  .field
    = f.label :gross_rev
    = f.text_field :gross_rev
  .field
    = f.label :net_rev
    = f.text_field :net_rev
  .actions
    = f.submit 'Save'

- model_class = Route
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @route.date
%p
  %strong= model_class.human_attribute_name(:trip_number) + ':'
  %br
  = @route.trip_number
%p
  %strong= model_class.human_attribute_name(:advance) + ':'
  %br
  = @route.advance
%p
  %strong= model_class.human_attribute_name(:reimbursement) + ':'
  %br
  = @route.reimbursement
%p
  %strong= model_class.human_attribute_name(:gross_revenue) + ':'
  %br
  = @route.gross_revenue
%p
  %strong= model_class.human_attribute_name(:net_revenue) + ':'
  %br
  = @route.net_revenue
%p
  %strong= model_class.human_attribute_name(:driver_id) + ':'
  %br
  = @route.driver_id
%p
  %strong= model_class.human_attribute_name(:rented_trailer) + ':'
  %br
  = @route.rented_trailer
%p
  %strong= model_class.human_attribute_name(:trailer_rental) + ':'
  %br
  = @route.trailer_rental

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), routes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_route_path(@route), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), route_path(@route), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
